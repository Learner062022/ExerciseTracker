                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Button Text="Reset" x:Name="resetButton" Clicked="ButtonClicked"/>
            <Button Text="Back" x:Name="backButton" Clicked="ButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>